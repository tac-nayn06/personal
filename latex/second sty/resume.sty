\definecolor{misc}{HTML}{0B524B}
%---------------------------------------------
%fonts, text formatting
\RequirePackage{roboto-mono}
\RequirePackage{lato}
\RequirePackage{Alegreya}
\renewcommand*\oldstylenums[1]{{\AlegreyaOsF #1}}
\RequirePackage[cmintegrals,cmbraces]{newtxmath}
\RequirePackage{ebgaramond-maths}
\renewcommand{\emph}[1]{\textbf{{\lato\textcolor{cvdarkgrn}{#1}}}}
% section packages
\RequirePackage{titling,titlesec,setspace}
\newcommand{\sctn}[1]{{\par\noindent\Large\color{cvdarkgrn}\AlegreyaMedium #1
    \vspace{0.1cm}\hrule\vspace{0.2cm}}}
\newcommand{\subsctn}[1]{{\par\noindent\AlegreyaMedium\large\color{cvdarkgrn} #1\par\noindent}}
\newcommand{\subsubsctn}[1]{{\par\noindent\AlegreyaMedium\color{cvdarkgrn} #1\par\noindent}}
%---------------------------------------------
\RequirePackage{mdframed}
\newcommand{\name}[1]{\newcommand{\realname}{#1}}
\newcommand{\hugeName}{\begin{center}
    {\Huge\color{cvdarkgrn}\lato\bfseries\realname}
    \end{center}}
\global\mdfdefinestyle{quote}{
    leftmargin=5.5cm,rightmargin=5.5cm,linecolor=white,backgroundcolor=white,
    }
\newcommand{\cvQuote}[2]{\begin{mdframed}[style=quote]{\color{misc}\Alegreya\itshape #1}\begin{flushright}{\color{misc}\Alegreya #2}\end{flushright}\end{mdframed}
}
\RequirePackage{fontawesome}
\newcommand{\links}[4]{\begin{center}\faLink\enskip #1\quad\faEnvelope\enskip #2\quad\faLinkedin\enskip #3\quad\faGithub\enskip #4\end{center}} % in order, website, mail, linkedin, github
\newcommand{\cvItem}[2]{\vspace{0.05cm}\par\noindent {\lato\bfseries\color{cvdarkgrn} #1}\hfill {\lato #2}}
\newcommand{\desc}[1]{\par\noindent {\color{maincolor} #1}}
\newcommand{\cvRef}[1]{\par\noindent(Reference: #1)}
